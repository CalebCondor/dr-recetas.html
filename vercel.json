{
  "version": 2,
  "public": "src",
  "buildCommand": "echo 'Static site - no build needed'",
  "outputDirectory": "src",
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/assets/js/modules/(.*)",
      "headers": [
        { "key": "Content-Type", "value": "application/javascript" },
        { "key": "Access-Control-Allow-Origin", "value": "*" }
      ]
    }
  ]
}
